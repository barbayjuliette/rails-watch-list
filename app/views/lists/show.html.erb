<div class="card-category"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300 %>')"
> <%= @list.name %>
</div>
<%# <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

<% @list.bookmarks.each do |bookmark|%>
  <p> Title: <%= bookmark.movie.title %> <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
  <p> Comment: <%= bookmark.comment %></p>
  <p> Overview: <%= bookmark.movie.overview %></p>
<% end %>


<%= link_to "Add a new movie",  new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>
<%= link_to "Back", :back, class: "btn btn-primary mt-3" %>
