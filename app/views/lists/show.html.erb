<div class="card-category"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300 %>')"
> <%= @list.name %>
</div>

<%= link_to "Add a new movie",  new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>
<%= link_to "Back", :back, class: "btn btn-primary mt-3" %>

<div class = "cards">
  <% @list.bookmarks.each do |bookmark|%>
    <div class= "card" id="card-movie">
    <%# Add image here  %>
      <div class = "card-body">
        <p class = "card-title"><%= bookmark.movie.title %> </p>
        <p class = "card-text">  <%= bookmark.movie.overview %></p>
        <p class = "card-text"> <em><%= bookmark.comment %></em></p>
        <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
